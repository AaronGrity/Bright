<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.datang.bright.tour">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/app_theme_notitle">
        <activity
            android:name=".splash.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".guide.GuideActivity" />
        <activity android:name=".main.MainActivity" />
        <activity android:name=".spot.SpotActivity" />
        <activity android:name=".hotel.HotelActivity" />
        <activity android:name=".spot.SpotDetailActivity"/>
        <activity android:name=".spot.SpotTicketActivity"/>
    </application>

</manifest>
