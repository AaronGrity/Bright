<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="3dp"
    android:background="@color/spot_detail_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/divider"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray" />

    <TextView
        android:paddingLeft="5dp"
        android:layout_marginTop="5dp"
        android:textSize="18dip"
        android:layout_below="@id/divider"
        android:id="@+id/tv_spot_detail_ticket_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="黄果树风景区成人票" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/tv_spot_detail_ticket_price"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textSize="16dip"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥180"
        android:drawableBottom="@drawable/bg_spot_book" />

    <TextView
        android:paddingLeft="8dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_spot_detail_ticket_time"
        android:layout_below="@id/tv_spot_detail_ticket_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/spot_bg"
        android:text="16:30前可预订今日票" />

    <TextView
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_spot_detail_ticket_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/spot_bg"
        android:text="详细信息"
        android:drawableEnd="@drawable/spot_detail" />

</RelativeLayout>
